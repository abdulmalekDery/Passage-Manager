                                   TextTrimming="None"/>

                    <TextBlock Text="I5" Grid.Column="2" FontSize="18" FontWeight="Bold" Foreground="Black"
                                   x:Name="i5TextBlockTitle" VerticalAlignment="Center" 
                                   HorizontalAlignment="Center" TextAlignment="Center"
                                   TextTrimming="None"/>

                    <TextBlock Text="I4" Grid.Column="3" FontSize="18" FontWeight="Bold" Foreground="Black"
                                   x:Name="i4TextBlockTitle" VerticalAlignment="Center" 
                                   HorizontalAlignment="Center" TextAlignment="Center"
                                   TextTrimming="None"/>

                    <TextBlock Text="I3" Grid.Column="4" FontSize="18" FontWeight="Bold" Foreground="Black"
                                   x:Name="i3TextBlockTitle" VerticalAlignment="Center" 
                                   HorizontalAlignment="Center" TextAlignment="Center"
                                   TextTrimming="None"/>
                </Grid>
            </GroupBox>

            <GroupBox Grid.Column="2" Name="outputPortGroupBox" Header="Outport port:"
                      HeaderTemplate="{StaticResource groupBoxHeaderTemplate}" 
                      Style="{StaticResource groupBoxStyle_Default}">
                <Grid Name="outputPortGrid" Margin="20,0,20,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="2*"/>
                    </Grid.RowDefinitions>
